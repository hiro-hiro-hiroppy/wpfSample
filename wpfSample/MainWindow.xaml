<Window x:Class="wpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="100" Margin="10">
            <Label Height="30" Width="100"></Label>
            <TextBox Height="30" Width="100"></TextBox>
            <TextBox Height="30" Width="100"></TextBox>
            <Button Height="30" Width="100"></Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Stretch" 
                    Margin="10,20,30,40">
            <Label Content="文字が書ける"></Label>
            <TextBox Text="0000"></TextBox>
            <Button Content="ボタンです"></Button>
        </StackPanel>
    </Grid>
</Window>
