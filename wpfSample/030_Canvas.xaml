<Window x:Class="wpfSample._030_Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfSample"
        mc:Ignorable="d"
        Title="_030_Canvas" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Rectangle Canvas.Left="20"
                       Canvas.Top="20"
                       Width="100"
                       Height="100"
                       Fill="Red"
                       Panel.ZIndex="0"></Rectangle>
            <Rectangle Canvas.Left="20"
                       Canvas.Top="170"
                       Width="100"
                       Height="100"
                       Fill="Blue"
                       Panel.ZIndex="2"></Rectangle>
            <Rectangle Canvas.Left="100"
                       Canvas.Top="100"
                       Width="100"
                       Height="100"
                       Fill="Yellow"
                       Panel.ZIndex="1"></Rectangle>
            <Button Canvas.Left="40"
                    Canvas.Top="40"
                    Content="AAA"
                    FontSize="20"></Button>
        </Canvas>
    </Grid>
</Window>
